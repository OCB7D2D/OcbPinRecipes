<configs>
	<!-- Pinnable Recipes -->
	<append xpath="/controls">
		<pinned_recipe_row slot="9999">
			<rect depth="1" width="176" height="67" slot="${slot}" controller="XUiC_PinnedRecipe, PinRecipes" on_scroll="true">
				<sprite pos="0,0" width="176" height="67" color="[black]" globalopacitymod="0.9" type="sliced"/>
				<sprite pos="1,-1" width="174" height="65" color="[lightGrey]" globalopacitymod="0.8" type="sliced"/>
				<rect depth="4" pos="3,-2" width="170" height="30">
					<!-- Main Icon of Pinned recipe -->
					<sprite depth="1" atlas="ItemIconAtlas" pos="0,0" width="30" height="30" foregroundlayer="true" globalopacitymod="0.9" sprite="{icon}" color="{iconTint}"/>

					<!-- Icon indicating recipe is locked -->
					<sprite depth="2" pos="6,-6" width="20" height="20" sprite="ui_game_symbol_locked" color="248,128,16,220" foregroundlayer="true" globalopacitymod="0.9" visible="{isRecipeLocked}"/>

					<!-- Label counting how many items of recipe to be crafted -->
					<label
						depth="3"
						name="count"
						text="{amount}"
						visible="true"
						pos="3,-2"
						font_size="15"
						width="26"
						height="20"
						foregroundlayer="true"
						crispness="Always"
						effect="Outline"
						effect_color="20,20,20,230"
						effect_distance="1,1"
						justify="left"
						pivot="TopLeft"
						color="240,240,240,248"
					/>

					<!-- Label showing the quality to craft (if it has any) -->
					<label
						depth="3"
						name="quality"
						text="{quality}"
						visible="{hasQuality}"
						pos="17,-11"
						font_size="11"
						width="26"
						height="20"
						foregroundlayer="true"
						crispness="Always"
						effect="Outline"
						effect_color="20,20,20,230"
						effect_distance="1,1"
						justify="left"
						pivot="TopLeft"
						color="240,200,120,248"
					/>

					<!-- Label with the translated name of pinned recipe -->
					<label
						depth="6"
						text="{title}"
						pos="95,-15"
						font_size="18"
						width="120"
						height="30"
						foregroundlayer="true"
						crispness="Always"
						justify="left"
						pivot="center"
						color="220,220,220,240"
						effect="outline"
						effect_color="20,20,20,230"
						visible="true"
						effect_distance="1,1"
					/>

					<!-- Button to increment amount of items to be made -->
					<button
						depth="13"
						pos="8,-22"
						width="10"
						height="10"
						name="Increment"
						type="sliced"
						hoverscale="1.2"
						sprite="ui_game_symbol_increment"
						defaultcolor="240,240,240,220"
						justify="center"
						pivot="center"
						sound="[paging_click]"
						foregroundlayer="true"
						visible="{showIncrement}"
						tooltip_key="xuiIncrement"
					/>

					<!-- Button to decrement amount of items to be made -->
					<button
						depth="13"
						pos="22,-22"
						width="10"
						height="10"
						name="Decrement"
						type="sliced"
						hoverscale="1.2"
						sprite="ui_game_symbol_decrement"
						defaultcolor="240,240,240,220"
						justify="center"
						pivot="center"
						sound="[paging_click]"
						foregroundlayer="true"
						visible="{showDecrement}"
						tooltip_key="xuiDecrement"
					/>

					<!-- Button to unpin the recipe -->
					<button
						depth="14"
						pos="162,-8"
						width="10"
						height="10"
						name="Unpin"
						type="sliced"
						hoverscale="1.2"
						sprite="ui_game_symbol_x"
						defaultcolor="240,80,80,220"
						justify="center"
						pivot="center"
						sound="[paging_click]"
						foregroundlayer="true"
						visible="{isMenuOpen}"
						tooltip_key="xuiUnpinRecipe"
					/>

					<!-- Button to craft the recipe -->
					<button
						depth="15"
						pos="162,-22"
						width="10"
						height="10"
						name="Craft"
						type="sliced"
						hoverscale="1.2"
						sprite="ui_game_symbol_hammer"
						defaultcolor="90,248,90,240"
						justify="center"
						pivot="center"
						sound="[recipe_click]"
						foregroundlayer="true"
						visible="{canCraft}"
						tooltip_key="lblContextActionCraft"
					/>
				</rect>

				<rect depth="6" pos="3,-35" width="170" height="30">
					<grid rows="5" width="170" height="30" cell_height="30" cell_width="35" arrangement="horizontal">
						<pinned_recipe_ingredient_row/>
						<pinned_recipe_ingredient_row/>
						<pinned_recipe_ingredient_row/>
						<pinned_recipe_ingredient_row/>
						<pinned_recipe_ingredient_row/>
					</grid>
				</rect>
			</rect>
		</pinned_recipe_row>

		<pinned_recipe_ingredient_row index="9999">
			<rect width="30" height="30" index="${index}" tooltip="tooltip" name="Ingredient" style="doubleclick" on_doubleclick="true" controller="XUiC_PinnedRecipeIngredient, PinRecipes">
				<sprite depth="4" name="icon" width="30" height="30" pos="0,1" atlas="ItemIconAtlas" sprite="{icon}" color="{iconTint}" foregroundlayer="true" globalopacitymod="0.95"/>
				<sprite depth="5" width="16" height="16" pos="7,-7" foregroundlayer="true" globalopacitymod="0.8" sprite="ui_game_symbol_check" visible="{hasEnough}" color="[green]"/>
				<label
					depth="6"
					name="count"
					pos="15,-15"
					text="{delta}"
					font_size="18"
					visible="{needsMore}"
					foregroundlayer="true"
					width="30"
					height="30"
					justify="center"
					pivot="center"
					effect="outline"
					color="{textColor}"
					crispness="Always"
					effect_distance="1,1"
					effect_color="20,20,20,230"
				/>
				<label
					depth="7"
					name="count"
					pos="15,-15"
					text="{excess}"
					font_size="16"
					visible="{hasExcess}"
					foregroundlayer="true"
					width="30"
					height="30"
					justify="center"
					pivot="center"
					effect="outline"
					color="180,240,180,240"
					crispness="Always"
					effect_distance="1,1"
					effect_color="20,20,20,230"
				/>
			</rect>
		</pinned_recipe_ingredient_row>
	</append>
</configs>
